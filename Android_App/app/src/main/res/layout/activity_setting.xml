<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical"
    android:layout_marginBottom="10dp"
    tools:context=".SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">




        <TextView
            android:text="Geyser"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:letterSpacing=".2"
            />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/geyser"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/geyser1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="configure"
            android:textAllCaps="true"
            android:backgroundTint="#AAAAAA"
            android:layout_marginTop="100dp"
            />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/geyser"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="configure"
            app:rippleColor="#FF3366"
            android:backgroundTint="@color/colorButton"
            android:textAllCaps="true"
            />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">



        <TextView
            android:text="Minimum Tank Value"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:letterSpacing=".2"
            />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:src="@drawable/tub"/>


        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tank_min1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="configure"
            android:layout_marginTop="100dp"
            android:textAllCaps="true"
            android:backgroundTint="#AAAAAA"
            />



        <com.google.android.material.button.MaterialButton
            android:id="@+id/tank_min"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="configure"
            android:layout_marginTop="100dp"
            app:rippleColor="#FF3366"
            android:backgroundTint="@color/colorButton"
            android:textAllCaps="true"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">


        <TextView
            android:text="Maximum Tank Value"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:letterSpacing=".2"
            />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/tub"
                android:layout_marginLeft="20dp"/>


        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tank_max1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="configure"
            android:layout_marginTop="100dp"
            android:textAllCaps="true"
            android:backgroundTint="#AAAAAA"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tank_max"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="configure"
            android:layout_marginTop="100dp"
            android:textAllCaps="true"
            app:rippleColor="#FF3366"
            android:backgroundTint="@color/colorButton"

            />


    </LinearLayout>


</LinearLayout>